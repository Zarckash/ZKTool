<Window
    x:Class="ZKToolForm.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZKToolForm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ZKTool Setup"
    Width="380"
    Height="130"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="C:\Program Files\ZKTool\WPF\Images\ZKTool.ico"
    SnapsToDevicePixels="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="C:\Program Files\ZKTool\WPF\StylesDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Border Background="{DynamicResource AppBackgroundColor}" CornerRadius="8">
            <Border
                BorderBrush="#FFFFFF"
                BorderThickness="1"
                CornerRadius="8"
                Opacity=".2" />
        </Border>

        <Grid
            x:Name="SetupTitleBar"
            Height="30"
            Margin="0,0,95,0"
            VerticalAlignment="Top"
            Panel.ZIndex="50"
            Background="Red"
            Opacity="0"
        />

        <Grid Margin="8">
            <Grid
                x:Name="InteractionButtonsGrid"
                Grid.Column="1"
                Width="56"
                Height="28"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Panel.ZIndex="20">

                <Border Background="{DynamicResource AppItemsColor}" CornerRadius="4" />
                <StackPanel Orientation="Horizontal">
                    <Button
                        x:Name="Minimize"
                        Content=""
                        Style="{DynamicResource InteractionButtonStyle}" />
                    <Button
                        x:Name="Close"
                        Content=""
                        FontSize="14"
                        IsEnabled="False"
                        Opacity=".5"
                        Style="{DynamicResource InteractionButtonStyle}" />
                </StackPanel>
            </Grid>
        </Grid>

        <Border
            Width="48"
            Height="48"
            Margin="11,11,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Panel.ZIndex="10"
            BorderBrush="{DynamicResource AppAccentColor}"
            BorderThickness="2.8"
            CornerRadius="24" />

        <Image
            x:Name="ZKToolLogo"
            Width="46"
            Height="46"
            Margin="12"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Opacity="1"
            Source="C:\Program Files\ZKTool\WPF\Images\ZKTool.png"
            Style="{DynamicResource ImageQuality}"
            UseLayoutRounding="True" />

        <TextBlock
            x:Name="Title"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="70,16"
            FontFamily="{DynamicResource FontBold}"
            FontSize="28"
            Foreground="{DynamicResource AppAccentColor}"
            Text="ZKTool Setup" />

        <TextBlock
            x:Name="Status"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="16,55,0,0"
            FontFamily="{DynamicResource Font}"
            FontSize="18"
            Foreground="{DynamicResource AppTextColor}"
            Text="" />
        
    </Grid>
</Window>