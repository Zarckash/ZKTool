                <Grid Grid.Row="1" Margin="8,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.05*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.2*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="63" />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <Label
                            Margin="8,8,0,0"
                            Content="Colores:"
                            Style="{DynamicResource CategoryLabelStyle}" />
                        <Grid Margin="0,8,0,0">
                            <Label Content="Énfasis principal" Style="{DynamicResource ColorDialogLabelStyle}" />
                            <Button x:Name="ColorBox1" Style="{DynamicResource ColorDialogStyle}" />
                        </Grid>
                        <Grid>
                            <Label Content="Énfasis secundario" Style="{DynamicResource ColorDialogLabelStyle}" />
                            <Button x:Name="ColorBox2" Style="{DynamicResource ColorDialogStyle}" />
                        </Grid>
                        <Grid>
                            <Label Content="Administrador de tareas" Style="{DynamicResource ColorDialogLabelStyle}" />
                            <Button x:Name="ColorBox3" Style="{DynamicResource ColorDialogStyle}" />
                        </Grid>
                        <Grid>
                            <Label Content="Administrador de tareas en uso" Style="{DynamicResource ColorDialogLabelStyle}" />
                            <Button x:Name="ColorBox4" Style="{DynamicResource ColorDialogStyle}" />
                        </Grid>
                        <Grid>
                            <Label Content="Rectángulo de selección" Style="{DynamicResource ColorDialogLabelStyle}" />
                            <Button x:Name="ColorBox5" Style="{DynamicResource ColorDialogStyle}" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.RowSpan="2">
                        <Label Content="Fondo de pantalla:" Style="{DynamicResource CategoryLabelStyle}" />
                        <Button x:Name="WallpaperBox1" Style="{DynamicResource WallpaperBoxStyle}">
                            <Grid>
                                <Border
                                    x:Name="Mask1"
                                    Background="#2B2B2B"
                                    CornerRadius="6" />
                                <StackPanel>
                                    <StackPanel.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Mask1}" />
                                    </StackPanel.OpacityMask>
                                    <Image
                                        x:Name="WallpaperBox1Image"
                                        Height="{Binding ActualHeight, ElementName=WallpaperBox1}"
                                        Stretch="Fill"
                                        Style="{DynamicResource ImageQuality}"
                                        Visibility="Collapsed" />
                                    <Label
                                        x:Name="WallpaperBox1Label"
                                        Width="{Binding ActualWidth, ElementName=WallpaperBox1}"
                                        Height="40"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Content="Seleccionar imagen"
                                        FontFamily="{DynamicResource Font}"
                                        FontSize="18"
                                        Foreground="White" />
                                </StackPanel>
                            </Grid>
                        </Button>
                        <Button x:Name="WallpaperBox2" Style="{DynamicResource WallpaperBoxStyle}" Visibility="Hidden" Margin="8,0,8,8">
                            <Grid>
                                <Border
                                    x:Name="Mask2"
                                    Background="#2B2B2B"
                                    CornerRadius="6" />
                                <StackPanel>
                                    <StackPanel.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Mask2}" />
                                    </StackPanel.OpacityMask>
                                    <Image
                                        x:Name="WallpaperBox2Image"
                                        Height="{Binding ActualHeight, ElementName=WallpaperBox2}"
                                        Stretch="Fill"
                                        Style="{DynamicResource ImageQuality}"
                                        Visibility="Collapsed" />
                                    <Label
                                        x:Name="WallpaperBox2Label"
                                        Width="{Binding ActualWidth, ElementName=WallpaperBox2}"
                                        Height="40"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Content="Seleccionar imagen"
                                        FontFamily="{DynamicResource Font}"
                                        FontSize="18"
                                        Foreground="White" />
                                </StackPanel>
                            </Grid>
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="PresetsPanel"
                        Visibility="Hidden"
                        Grid.Row="1"
                        Width="180"
                        Margin="0,15,0,0"
                        HorizontalAlignment="Left">
                        <Button
                            x:Name="ActualPreset"
                            Margin="8,4"
                            Content="Cargar tema actual"
                            FontFamily="Font"
                            Style="{DynamicResource SearchButtonStyle}" />
                        <Button
                            x:Name="Preset1"
                            Margin="8,4"
                            Content="Cargar tema 1"
                            FontFamily="Font"
                            Style="{DynamicResource SearchButtonStyle}"
                            Visibility="Collapsed" />
                        <Button
                            x:Name="Preset2"
                            Margin="8,4"
                            Content="Cargar tema 2"
                            FontFamily="Font"
                            Style="{DynamicResource SearchButtonStyle}"
                            Visibility="Collapsed" />
                        <Button
                            x:Name="Preset3"
                            Margin="8,4"
                            Content="Cargar tema 3"
                            FontFamily="Font"
                            Style="{DynamicResource SearchButtonStyle}"
                            Visibility="Collapsed" />
                        <Button
                            x:Name="Preset4"
                            Margin="8,4"
                            Content="Cargar tema 4"
                            FontFamily="Font"
                            Style="{DynamicResource SearchButtonStyle}"
                            Visibility="Collapsed" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,4"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                        <StackPanel
                            Margin="0,4"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Label Content="Modo oscuro" Style="{DynamicResource ToggleLabelStyle}" />
                            <ToggleButton x:Name="DarkThemeToggle" Style="{DynamicResource ToggleButtonStyle}" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,4"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Label Content="Transparencia" Style="{DynamicResource ToggleLabelStyle}" />
                            <ToggleButton x:Name="TransparencyToggle" Style="{DynamicResource ToggleButtonStyle}" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,4"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Label Content="Ocultar botón de buscar" Style="{DynamicResource ToggleLabelStyle}" />
                            <ToggleButton x:Name="HideSearchButtonToggle" Style="{DynamicResource ToggleButtonStyle}" />
                        </StackPanel>
                    </StackPanel>

                    <Button
                        x:Name="ApplyTheme"
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Height="45"
                        Content="Aplicar tema seleccionado"
                        FontFamily="{DynamicResource FontBold}"
                        Style="{DynamicResource SearchButtonStyle}" />

                </Grid>
            </Grid>
            <Grid
                x:Name="OutputContentGrid"
                Grid.Column="1"
                Height="55"
                Margin="8,0,0,0"
                VerticalAlignment="Bottom"
                Visibility="Visible">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Border
                        Background="{DynamicResource AppItemsColor}"
                        BorderBrush="{DynamicResource AppAccentColor}"
                        BorderThickness="2"
                        CornerRadius="6" />
                    <Border
                        Width="2"
                        Height="20"
                        Margin="8,0"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource AppTextColor}"
                        CornerRadius="2" />
                    <TextBlock
                        x:Name="OutputBox"
                        Margin="16,0,8,0"
                        VerticalAlignment="Center"
                        FontFamily="Hasklig"
                        FontSize="16"
                        Foreground="{DynamicResource AppTextColor}"
                        Text="Ready" />
                </Grid>
                <Button
                    x:Name="StartScript"
                    Grid.Column="1"
                    Content="INICIAR SCRIPT"
                    Style="{DynamicResource StartScriptButtonStyle}" />
            </Grid>
        </Grid>
    </Grid>
</Window>